# Server
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/swiftbuy

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_AGENT_SECRET=your-agent-secret-key-change-this
JWT_EXPIRES_IN=7d

# Karma Wallet API (USDC payment + virtual card)
KARMA_BASE_URL=https://agents.karmapay.xyz

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Scraping (Google Shopping via Serper)
SERPER_API_KEY=your-serper-api-key
SCRAPE_TIMEOUT_MS=30000
MAX_CONCURRENT_SCRAPES=3

# Purchase
DEFAULT_APPROVAL_THRESHOLD=50
AUTO_APPROVE_BELOW=25

# ── Checkout Engine ──────────────────────────────────────────
# Browser Use is the PRIMARY engine (cloud browser + LLM)
# Get your API key at: https://cloud.browser-use.com
BROWSER_USE_API_KEY=your-browser-use-api-key

# Anthropic is used as FALLBACK if Browser Use is unavailable
ANTHROPIC_API_KEY=your-anthropic-api-key

# Checkout Agent (Python sidecar) — URL of the FastAPI service
CHECKOUT_AGENT_URL=http://localhost:8100
CHECKOUT_AGENT_TIMEOUT=300000

# Checkout modes:
#   MOCK_CHECKOUT=true   → Skip real browser, return mock success (for dev/testing)
#   MOCK_CHECKOUT=false   → Run real browser checkout
#   DRY_RUN_CHECKOUT=true → Browser runs but STOPS before final "Place Order" (safe testing)
#   DRY_RUN_CHECKOUT=false → Browser clicks final submit (real purchase!)
MOCK_CHECKOUT=false
DRY_RUN_CHECKOUT=true
